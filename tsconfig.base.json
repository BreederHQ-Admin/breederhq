{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": false,
    "noEmit": true,
    "paths": {
      "@bhq/ui": [
        "packages/ui/src"
      ],
      "@bhq/mock": [
        "packages/mock/src"
      ],
      "@bhq/config/*": [
        "packages/config/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
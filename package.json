{
  "name": "breederhq-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run -w @bhq/contacts build && npm run -w @bhq/animals build && npm run -w @bhq/breeding build",
    "dev:contacts": "npm run -w @bhq/contacts dev",
    "dev:animals": "npm run -w @bhq/animals dev",
    "dev:breeding": "npm run -w @bhq/breeding dev",
    "preview:contacts": "npm run -w @bhq/contacts preview",
    "preview:animals": "npm run -w @bhq/animals preview",
    "preview:breeding": "npm run -w @bhq/breeding preview"
  },
  "devDependencies": {
    "typescript": "^5.6.2"
  }
}